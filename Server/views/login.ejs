<html>
<head>
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:400,700" rel="stylesheet">
    <style>

        * {
            box-sizing: border-box;
        }

        body {
            font-family: 'Open Sans', sans-serif;
            background-color: #cd5a91;
            color: white;
        }

        h2 {
            color: white;
        }

        form {
            width: 100%;
        }

        .content {
            margin-top: 50px;
            width: 344px;
            margin-left: calc(50% - 172px);
        }

        .input {
            margin-bottom: 8px;
            width: 100%;
            text-align: center;
            color: #444;
        }

        ul {
            margin: 0 auto;
        }

        .errors {
            background-color: rgba(255,255,255,0.3);
            padding: 10px 20px;
            margin-bottom: 10px;
            border-radius: 4px;
        }

        .errors div {
            font-weight: bold;
            margin-bottom: 10px;
        }

        label {
            color: white;
            display: block;
            text-align: left;
            margin-left: 10%;
            font-weight: bold;
        }

        input {
            height: 35px;
            width: 80%;
            line-height: 30px;
            text-align: center;
            font-size: 15px;
            padding: 4px 8px;
            outline: none;
            border-radius: 4px;
            border: 1px solid rgba(0,0,0,0.1);
            box-shadow: 2px 2px 3px rgba(0,0,0,0.2);
        }

        button.submit {
            margin-top: 5px;
            height: 35px;
            font-size: 16px;
            float: left;
            margin-left: 10%;
            padding: 0 20px;
            border-radius: 4px;
            background-color: rgb(11, 171, 11);
            color: white;
            font-weight: bold;
            border: none;
            box-shadow: 0px 5px 0px rgb(3, 146, 3);
        }

        button:active, button:focus {
            outline: none;
            border: none;
        }

        button:active {
            transform: translateY(5px);
            box-shadow: none;
        }

        button {
            display: block;
        }

        .buttons {
            height: 100px;
        }

        #signinButton {
            background-color: rgb(226, 69, 69);
            box-shadow: 0px 5px 0px rgb(187, 47, 47);
            margin-top: 15px;
        }

        .brand {
            height: 50px;
            width: 100%;
            margin-bottom: 40px;
            background-image: url('/assets/prello_logo.png');
            background-size: contain;
            background-repeat: no-repeat;
            background-position: center;
        }

        .register {
           display: block;
           margin-left: 10%;
        }

        .register a {
            color: inherit;
            font-weight: bold;
        }

    </style>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.2/jquery.min.js">
    </script>
    <script src="https://apis.google.com/js/client:platform.js?onload=start" async defer>
    </script>

    <script>
        function start() {
          gapi.load('auth2', function() {
            auth2 = gapi.auth2.init({
              client_id: '532471730394-bh1qi5q6hkh0c13quao0ptplp8sidfjb.apps.googleusercontent.com',
            });
          });
        }
      </script>
</head>
<body>
    <div class="content">
        <div class="brand"></div>
        <h2>
            Log-in to your Prello account
        </h2>
        <% if (errors.length > 0) { %>
            <div class='errors'>
                <div>Error:</div>
                <ul class="errors-list">
                    <% for(let i = 0; i < errors.length; i++) { %>
                        <li><%= errors[i] %></li>
                    <% } %>
                </ul>
            </div>
        <% } %>
        <% if (displayedForm) { %>
            <form action="<%= redirect_uri %>" method="post">
                <div class="input">
                    <label>Email: </label>
                    <input type="text" name="email" placeholder="ex., bryan@inthekitchen.com" value="<%= email %>">
                </div>
                <div class="input">
                    <label>Password: </label>
                    <input type="password" name="password" placeholder="ex., ••••••••••••">
                </div>
                <div class='buttons'>
                    <button class="submit" type='submit'>Login</button>
                    <button class="submit" id="signinButton">Sign in with Google</button>
                </div>
            </form>
            <div class='register'>
                Don't have an account? <a href='https://themightyprello.igpolytech.fr/register'>Register</a>
            </div>
        <% } %>
    </div>

    

    <script>
        $('#signinButton').click(function() {
          auth2.grantOfflineAccess().then(signInCallback);
        });
      </script>

    <script>
    function signInCallback(authResult) {
      if (authResult['code']) {
    
        // Hide the sign-in button now that the user is authorized, for example:
        $('#signinButton').attr('style', 'display: none');
    
        $.ajax({
          type: 'POST',
          url: '/oauth/google/login',
          headers: {
            'X-Requested-With': 'XMLHttpRequest'
          },
          contentType: 'application/json',
          success: function(result) {
            if (result.redirect) {
                window.location.href = result.redirect;
            }
          },
          processData: false,
          data: JSON.stringify({
              code: authResult.code,
              redirect_uri: '<%= redirect_uri %>',
              client_id: '<%= client_id %>',
              scope: '<%= scope %>'
            })
        });
      } else {
        // There was an error.
      }
    }
    </script>

</body>

</html>